{
  "name": "local-first-chat-api",
  "scripts": {
    "dev": "wrangler dev src/index.ts --env dev.vars",
    "deploy": "wrangler deploy --minify src/index.ts",
    "db:generate:supabase": "drizzle-kit generate --config=drizzle.supabase.config.ts",
    "db:generate:pglite": "drizzle-kit generate --config=drizzle.pglite.config.ts && tsx ./compile-migrations.ts",
    "db:generate": "npm run db:generate:supabase && npm run db:generate:pglite && tsx ./compile-migrations.ts",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "tsx seed.ts",
    "db:setup": "npm run db:generate && npm run db:migrate && npm run db:seed",
    "db:studio": "drizzle-kit studio",
    "fiberplane": "npx @fiberplane/studio@latest"
  },
  "dependencies": {
    "@clerk/backend": "^1.21.4",
    "@hono/clerk-auth": "^2.0.0",
    "@hono/zod-validator": "^0.4.2",
    "@scalar/hono-api-reference": "^0.5.165",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.3",
    "drizzle-zod": "^0.6.1",
    "hono": "^4.6.15",
    "hono-openapi": "^0.3.1",
    "postgres": "^3.4.5",
    "svix": "^1.44.0",
    "zod": "^3.24.1",
    "zod-openapi": "^4.2.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241230.0",
    "@fiberplane/hono-otel": "^0.6.2",
    "drizzle-kit": "^0.30.1",
    "drizzle-seed": "^0.2.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "wrangler": "^3.99.0"
  }
}