{
  "tasks": {
    "dev": "deno run --watch main.ts",
    "lint:fix": "deno lint \"**/*.ts\" \"**/*.tsx\" --fix",
    "fmt:fix": "deno fmt \"**/*.ts\" \"**/*.tsx\""
  },
  "workspace": ["./use-prompt-api", "./prompt-api-playground-react"],
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@types/dom-chromium-ai": "npm:@types/dom-chromium-ai@^0.0.2",
    "@types/react": "npm:@types/react@^18.3.11",
    "react": "npm:react@^18.3.1",
    "react-dom": "npm:react-dom@^18.3.1"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "@types/dom-chromium-ai",
      "deno.window",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "react-jsx",
    "strict": true
  },
  "nodeModulesDir": "auto"
}
