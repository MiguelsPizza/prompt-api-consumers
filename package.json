{
  "name": "pnpm-monorepo",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky install",
    "grok": "pnpm  use prompt-api",
    "dev": "pnpm --filter use-prompt-api run build --watch & pnpm --filter local-first-chat run dev",
    "deploy:web": "pnpm --filter use-prompt-api run build && pnpm -filter local-first-chat run build && wrangler pages deploy ./local-first-chat/dist",
    "deploy:local": "pnpm --filter use-prompt-api run build && pnpm -filter local-first-chat run build && pnpm --filter local-first-chat run preview"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.16.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "eslint": "latest",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.13.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "prettier": "^3.4.2",
    "typescript-eslint": "^8.18.0"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*": "prettier --write --ignore-unknown"
  }
}
